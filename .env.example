# Access mode:
# - none: local/dev without external auth
# - cloudflare: require Cloudflare Access header
ACCESS_MODE=none

# When ACCESS_MODE=cloudflare, allow only this email (optional but recommended)
ACCESS_SINGLE_USER_EMAIL=you@example.com

# In production, enforce ACCESS_MODE=cloudflare
REQUIRE_CLOUDFLARE_IN_PRODUCTION=true

# Cloudflare Access verification
# Team domain example: your-team.cloudflareaccess.com
CLOUDFLARE_ACCESS_TEAM_DOMAIN=
# Audience (AUD) tag value from your Cloudflare Access Application
CLOUDFLARE_ACCESS_AUD=
# Optional explicit issuer (default: https://<CLOUDFLARE_ACCESS_TEAM_DOMAIN>)
CLOUDFLARE_ACCESS_ISSUER=

# Local DB and backup paths
DB_PATH=./data/lab-dashboard.sqlite
BACKUP_DIR=./data/backups
BACKUP_KEEP_DAYS=30
BACKUP_MAX_FILES=30

# Restore safety limits
RESTORE_UPLOAD_MAX_BYTES=104857600
RESTORE_MAX_PREPARED=5

# Import safety limits
IMPORT_MAX_BYTES=10485760
IMPORT_MAX_ROWS=100000
